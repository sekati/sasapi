 * sets the global pan	 * @param n (Number) -100 to 100	 */	public function setPan (n:Number):Void {		_gPan = MathBase.constrain (n, -100, 100);		_gSound.setPan (_gPan);	}	/**	 * play a sound	 * @param linkage (String) linkage id for sound	 * @param loops (Number) number of times to play sound	 * @param msOffset (Number) miliseconds offset	 * @return Void	 */	public function play (linkage:String, loops:Number, msOffset:Number):Void {		if (loops == null) {			loops = 0;		}		if (msOffset == null) {			msOffset = 0;		}		var s:Sound = new Sound (_holder);		s.attachSound (linkage);		s.start (msOffset / 1000, loops);	}	/**	 * toggle mute global application audio	 * @param isMute (Boolean) optional force state	 * @return Void	 */	public function mute (isMute:Boolean):Void {		if (!_gMute || isMute) {			_gSound.setVolume (0);			_gMute = true;		} else if (_gMute || !isMute) {			_gSound.setVolume (_gVolume);			_gMute = false;		}	}}